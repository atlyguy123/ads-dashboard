# Orchestrator & Dashboard Configuration
# Copy this file to .env and fill in your actual values

# Meta API Configuration (required for dashboard functionality)
META_ACCESS_TOKEN=your_meta_access_token_here
META_ACCOUNT_ID=your_meta_account_id_here
META_API_VERSION=v22.0

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here

# Database Configuration (paths relative to orchestrator directory)
META_HISTORICAL_DB_PATH=data/meta_historical_data.db
MIXPANEL_DB_PATH=data/mixpanel_data.db
MIXPANEL_ANALYTICS_DB_PATH=data/mixpanel_analytics.db

# Orchestrator Configuration
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=5001

# Dashboard Configuration
DASHBOARD_ENABLED=true 