# Orchestrator & Dashboard Configuration
# Copy this file to .env and fill in your actual values

# Meta API Configuration (required for dashboard functionality)
META_ACCESS_TOKEN=your_meta_access_token_here
META_ACCOUNT_ID=your_meta_account_id_here
META_API_VERSION=v22.0

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here

# Database Configuration (paths relative to orchestrator directory)
META_ANALYTICS_DB_PATH=database/meta_analytics.db
MIXPANEL_DB_PATH=data/mixpanel_data.db
MIXPANEL_ANALYTICS_DB_PATH=data/mixpanel_analytics.db

# Orchestrator Configuration
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=5001

# Dashboard Configuration
DASHBOARD_ENABLED=true

# Timezone Configuration
# Set your desired timezone - uncomment and change as needed
DEFAULT_TIMEZONE=America/New_York
DISPLAY_TIMEZONE=America/New_York
USE_UTC_STORAGE=true

# Common timezone options (uncomment to use):
# DEFAULT_TIMEZONE=America/New_York      # Eastern Time (ET/EDT)
# DEFAULT_TIMEZONE=America/Chicago       # Central Time (CT/CDT)
# DEFAULT_TIMEZONE=America/Denver        # Mountain Time (MT/MDT)
# DEFAULT_TIMEZONE=America/Los_Angeles   # Pacific Time (PT/PDT)
# DEFAULT_TIMEZONE=Asia/Jerusalem        # Israel Time (IST/IDT)
# DEFAULT_TIMEZONE=Europe/London         # GMT/BST
# DEFAULT_TIMEZONE=UTC                   # UTC (no DST) 